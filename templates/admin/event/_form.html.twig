{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
 {{ form_row(form._token) }}
<form id="addEventForm" action="" method="post">
    <div class="card-content">
        <div class="form-group {% if form_errors(form.title) %}has-error{% endif %}">
            <label class="control-label">
                Titre <star>*</star>
            </label>
            {{ form_row(form.title) }}
        </div>
        <div class="form-group {% if form_errors(form.description) %}has-error{% endif %}">
            <label class="control-label">
                Description<star>*</star>
            </label>
            {{ form_row(form.description) }}
        </div>
        <div class="form-group {% if form_errors(form.scheduled_at) %}has-error{% endif %}">
            <label class="control-label">
                Date<star>*</star>
            </label>
            {{ form_row(form.scheduled_at) }}
        </div>
        <div class="form-group {% if form_errors(form.imageFile) %}has-error{% endif %}">
            <div class="input-group">
                <label class="control-label">
                    Image actuelle:
                </label>
            </div>
            {% if event.imageName %}
                <img id="imgPreview" src="{{ vich_uploader_asset(event, 'imageFile') }}" alt="Cover" style="height: 280px; width: 420px; margin-bottom: 2rem;border: solid #66615B 2px; border-radius: 5px;">
            {% else %}
                <img id="imgPreview" src="{{ asset('img/no_photo.png') }}" style="height: 200px; width: 150px;border: solid #66615B 2px; margin-bottom: 2rem; border-radius: 5px;" alt="Cover">
            {% endif %}
            <div class="input-group">
                {{ form_row(form.imageFile) }}
            </div>
        </div>
        <div class="category"><star>*</star> Champs obligatoires</div>
        <div class="card-footer">
            <a class="btn btn-danger btn-fill pull-right" href="{{ path('app_event_index') }}" style="margin-left: 1rem;">Annuler</a>
            <button class="btn btn-info btn-fill pull-right">{{ button_label|default('Enregistrer') }}</button>
            <div class="clearfix"></div>
        </div>
    </div>
</form>
{{ form_end(form) }}

