{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
 {{ form_row(form._token) }}
<form id="registerForm" action="" method="post">
    <div class="card-content">
        <div class="form-group {% if form_errors(form.firstName) %}has-error{% endif %}">
            <label class="control-label">
                Prénom <star>*</star>
            </label>
            {{ form_row(form.firstName) }}
        </div>
        <div class="form-group {% if form_errors(form.lastName) %}has-error{% endif %}">
            <label class="control-label">
                Nom <star>*</star>
            </label>
            {{ form_row(form.lastName) }}
        </div>
        <div class="form-group {% if form_errors(form.email) %}has-error{% endif %}">
            <label class="control-label">
                E-Mail <star>*</star>
            </label>
            {{ form_row(form.email) }}
        </div>
        <div class="form-group {% if form_errors(form.username) %}has-error{% endif %}">
            <label class="control-label">
                Username <star>*</star>
            </label>
            {{ form_row(form.username) }}
        </div>
        <div class="form-group {% if form_errors(form.password) %}has-error{% endif %}">
            <label class="control-label">Mot de passe <star>*</star></label>
            {{ form_row(form.password) }}
        </div>
        <div class="form-group">
            <label class="control-label">Rôle <star>*</star></label>
            {{ form_row(form.roles) }}
        </div>
        <div class="category"><star>*</star> Champs obligatoires</div>
        <div class="card-footer">
            <a class="btn btn-danger btn-fill pull-right" href="{{ path('app_user_index') }}" style="margin-left: 1rem;">Annuler</a>
            <button class="btn btn-info btn-fill pull-right">{{ button_label|default('Enregistrer') }}</button>
            <div class="clearfix"></div>
        </div>
    </div>
</form>
{{ form_end(form) }}
